<div class="container">
	<form>
		<p id="notice"><%= notice %></p>
		<div class="form-row">
			<div class="form-group col-md-8">
				
				<p>
				  <strong>User Name:</strong>
				  <%= @report.user.name %>
				</p>

				<p>
				  <strong>User Email:</strong>
				  <%= @report.user.email %>
				</p>

				<p>
				  <strong>Name:</strong>
				  <%= @report.title %>
				</p>

				<p>
				  <strong>Content:</strong>
				  <%= raw(@report.content) %>
				</p>
				
			</div>
		</div>
	</form>
</div>


<%= link_to 'Edit', edit_report_path(@report) %> |
