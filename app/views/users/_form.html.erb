

<%= form_for(@user, local: true) do |f| %>
  
  <%= render 'shared/error_messages' %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %></br>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %></br>

  <%= f.label :image %>
  <%= f.text_field :image, class: 'form-control' %></br>

  <%= f.label :address %>
  <%= f.text_field :address, class: 'form-control' %></br>

  <%= f.label :phone %>
  <%= f.text_field :phone, class: 'form-control' %></br>

  <%= f.label :date %>
  <%= f.text_field :date, class: 'form-control' %></br>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %></br>

<% end %>
